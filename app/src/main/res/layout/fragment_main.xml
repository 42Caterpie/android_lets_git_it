<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                >

                <ImageButton
                    android:id="@+id/main_toolbar_refresh_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_refresh_24"
                    android:background="@color/transparent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@id/main_toolbar_setting_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <ImageButton
                    android:id="@+id/main_toolbar_setting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_settings_24"
                    android:background="@color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_user_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="4dp"
                android:padding="8dp"
                android:background="@drawable/background_trans"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/main_toolbar"
                >

                <TextView
                    android:id="@+id/main_user_info_name_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    tools:text="JIIIIIND"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/main_user_info_img_container"
                    app:layout_constraintEnd_toEndOf="@id/main_user_info_img_container"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_user_info_img_container"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H 1,1"
                    app:layout_constraintTop_toBottomOf="@id/main_user_info_name_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/main_user_info_ongoing_container"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/main_user_info_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_foreground"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_user_info_ongoing_container"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintDimensionRatio="H 1,1"
                    app:layout_constraintTop_toTopOf="@id/main_user_info_img_container"
                    app:layout_constraintStart_toEndOf="@id/main_user_info_img_container"
                    app:layout_constraintEnd_toStartOf="@id/main_user_info_today_commit_container"
                    >

                    <TextView
                        android:id="@+id/main_user_info_ongoing_value"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        tools:text="72"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/main_user_info_ongoing_unit"
                        />

                    <TextView
                        android:id="@+id/main_user_info_ongoing_unit"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="@string/days_ongoing"
                        app:layout_constraintTop_toBottomOf="@id/main_user_info_ongoing_value"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_user_info_today_commit_container"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H 1,1"
                    app:layout_constraintTop_toTopOf="@id/main_user_info_img_container"
                    app:layout_constraintStart_toEndOf="@id/main_user_info_ongoing_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <ImageView
                        android:id="@+id/main_user_info_today_commit_iv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/main_user_info_today_commit_label"
                        />

                    <TextView
                        android:id="@+id/main_user_info_today_commit_label"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/today_commit"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/main_user_info_today_commit_iv"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_challenge_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="4dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/background_trans"
                app:layout_constraintTop_toBottomOf="@id/main_user_info_container"
                >

                <TextView
                    android:id="@+id/main_challenge_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/challenge"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/main_challenge_title"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_challenge_disable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        >

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_challenge_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        >

                        <EditText
                            android:id="@+id/main_challenge_title_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text=""
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:hint="@string/challenge_title"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:inputType="text"
                            android:paddingHorizontal="16dp"
                            android:background="@color/transparent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/main_challenge_ongoing_value"
                            />

                        <TextView
                            android:id="@+id/main_challenge_ongoing_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            tools:text="72"
                            app:layout_constraintTop_toTopOf="@id/main_challenge_title_value"
                            app:layout_constraintBottom_toBottomOf="@id/main_challenge_title_value"
                            app:layout_constraintEnd_toStartOf="@id/main_challenge_ongoing_sep"
                            />

                        <TextView
                            android:id="@+id/main_challenge_ongoing_sep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/slash"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@id/main_challenge_ongoing_value"
                            app:layout_constraintEnd_toStartOf="@id/main_challenge_value"
                            />

                        <EditText
                            android:id="@+id/main_challenge_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:hint="365"
                            android:background="@color/transparent"
                            android:maxLines="1"
                            app:layout_constraintBottom_toBottomOf="@id/main_challenge_ongoing_value"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:autofillHints="true" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/main_challenge_progress_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            app:layout_constraintTop_toBottomOf="@id/main_challenge_title_value"
                            >

                            <ProgressBar
                                android:id="@+id/main_challenge_progress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:progressDrawable="@drawable/challenge_progress"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_contribution_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="4dp"
                android:elevation="4dp"
                android:background="@drawable/background_trans"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/main_challenge_container"
                >

                <TextView
                    android:id="@+id/main_contribution_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contribution"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/main_contribution_title"
                    >

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        >

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rowCount="7"
                            android:orientation="vertical"
                            >

                        </GridLayout>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_badge_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_trans"
                android:elevation="4dp"
                android:padding="8dp"
                android:layout_marginHorizontal="4dp"
                app:layout_constraintTop_toBottomOf="@id/main_contribution_container"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <TextView
                    android:id="@+id/main_badge_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/badge"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_badge_img_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/main_badge_title"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_badge_img_list"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:listitem="@layout/item_badge_frame"
                        tools:itemCount="3"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>